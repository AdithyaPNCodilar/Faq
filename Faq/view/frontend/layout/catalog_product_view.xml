<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <container name="faq_form_container" as="faq_form_container" htmlTag="div" htmlClass="faq-form-container"/>
            <block class="Magento\Catalog\Block\Product\View" name="faq_form" template="Codilar_Faq::product/faq_form.phtml"/>
        </referenceContainer>
        <move element="faq_form" destination="faq_form_container" />
        <referenceBlock name="content">
                <block class="Codilar\Faq\Block\Faq" name="faq" template="Codilar_Faq::faq.phtml"/>
        </referenceBlock>
    </body>
</page>

